{
	"name": "Screenshot Maker",
	"version": "1.0.0",
	"description": "Расширение позволяет сделать скрншот страницы целиком",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"icons": {"128":"assets/img/camera.png"},
	"browser_action": {
		"default_icon": "assets/img/camera.png",
		"default_title": "Screenshot tab"
	},
	"permissions": [
		"<all_urls>",
		"activeTab",
        "tabs"
	],
	"web_accessible_resources": [
		"contentScript.js",
		"assets/*"
	],
	"manifest_version": 2
}
